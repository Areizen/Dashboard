{% extends '../master.njk' %}

{% block content %}
    <div class="container">

         <div class="row">
            <h2>Login</h2>
         </div>

        <div class="row">

                        {{ form.open({action: 'AuthController.login',class:'col s12'}) }}
                        {{ csrfField }}

                        <div class="row">
                            <div class="input-field col-s6">
                                {{ form.label('email','E-Mail Adress') }}
                                {{ form.email('email','',{class:'form-control'}) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col-s6">
                                {{ form.label('password','Password') }}
                                {{ form.password('password','',{class:'form-control'}) }}
                            </div>
                        </div>

                        <div class="submit">
                            {{ form.submit('Log in','',{class:'btn btn-primary'}) }}
                        </div>

                        {{ form.close() }}

                    </div>

                </div>

            </div>

        </div>

    </div>
{% endblock %}