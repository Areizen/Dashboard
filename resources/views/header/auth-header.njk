<header>
    <nav>
        <div class="nav-wrapper light-blue darken-3">
                <ul>
                    <li><a href="#" data-activates="sidebar" class="button-sidebar"><i class="material-icons">menu</i></a></li>
                    <li><a href="/"><i class="material-icons">home</i></li></a>
                </ul>
                <ul class="right">

                    <li><a id='notifications-dropdown' data-beloworigin="true" href='#' data-activates='notifications'><i class="material-icons">
